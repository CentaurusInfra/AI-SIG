{
    "title" : "Job",
    "bsonType": "object",
    "required": [
        "meta",
        "QoS",
        "policy"
    ],
    "properties": {
        "meta": {
            "bsonType": "object",
            "required": [
                "username",
                "jobId",
                "datasource",
                "resourceInfo",
                "createTime",
                "token",
                "tokenTimeout"
            ],
            "properties": {
                "username": {"bsonType": "string"},
                "jobId": {"bsonType": "string"},
                "datasource": {
                    "bsonType": "object",
                    "required": [
                        "name",
                        "bucket"
                    ],
                    "properties": {
                        "name": {"bsonType": "string"},
                        "bucket": {"bsonType": "string"},
                        "keys": {
                            "bsonType": "array",
                            "items": {"bsonType": "string"}
                        }
                    }
                },
                "resourceInfo": {
                    "bsonType": "object",
                    "title": "resourceInfo",
                    "properties": {
                        "CPUMemoryFree": {"bsonType": "int"},
                        "GPUMemoryFree": {"bsonType": "int"}
                    },
                    "description": "GPU and CPU memory resource information"
                },
                "createTime": {"bsonType": "timestamp"},
                "token": {"bsonType": "string"},
                "tokenTimeout": {"bsonType": "timestamp"}
            }
        },
        "QoS": {
            "bsonType": "object",
            "title": "qos",
            "required": [
                "UseCache",
                "FlushFreq",
                "DurabilityInMem",
                "DurabilityInDisk"
            ],
            "properties": {
                "UseCache": {"bsonType": "bool"},
                "FlushFreq": {"bsonType": "int"},
                "DurabilityInMem": {"bsonType": "int"},
                "DurabilityInDisk": {"bsonType": "int"}
            },
            "description": "QoS configuration"
        },
        "policy": {
            "bsonType": "object",
            "title": "cachePolicy",
            "required": [
                "createTime",
                "chunkSize",
                "chunks"
            ],
            "properties": {
                "createTime": {"bsonType": "timestamp"},
                "chunkSize": {"bsonType": "int"},
                "chunks": {
                    "bsonType": "array",
                    "items": {
                        "bsonType": "object",
                        "title": "chunk",
                        "required": [
                            "key",
                            "totalAccessTime",
                            "location",
                            "hasBackup"
                        ],
                        "properties": {
                            "key": {"bsonType": "string"},
                            "totalAccessTime": {"bsonType": "int"},
                            "lastAccessTime": {"bsonType": "timestamp"},
                            "location": {"bsonType": "string"},
                            "hasBackup": {"bsonType": "bool"}
                        }
                    }
                }
            },
            "description": "caching policy of the job"
        }
    }
}